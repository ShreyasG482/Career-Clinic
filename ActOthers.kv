MDScreen:
    name: 'actothers'
    MDFloatLayout:
        MDToolbar:
            title: 'Acting'
            elevation: 10
            pos_hint : {"center_x":0.5, "center_y": 0.93}
            MDIconButton:
                icon: 'logout'
                pos_hint : {"center_x":0.9, "center_y": 0.5}
                on_press: root.manager.current = 'others'
        Button:
            text: "Recommended Courses"
            font_size: "20sp"
            size_hint: .75, .07
            pos_hint: {"center_x": 0.5, "center_y": 0.81}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: (0/255, 204/255, 153/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
        ScrollView:
            pos_hint : {"center_x":0.5, "center_y": 0.3}
            MDList:
                TwoLineListItem:
                    text: 'B.A.(Acting)'
                    secondary_text: 'Bachelors Degree in Acting'
                TwoLineListItem:
                    text: 'B.A.(Hons)(Drama)'
                    secondary_text: 'Bachelor of Arts Honours in Drama'
                TwoLineListItem:
                    text: 'B.T.A.'
                    secondary_text: 'Bachelor of Theatre Arts'
                TwoLineListItem:
                    text: 'M.A.(Indian Theatre)'
                    secondary_text: 'Master of Arts in Indian Theatre'
                TwoLineListItem:
                    text: 'M.A.(Theatre)'
                    secondary_text: 'Master of Arts in Theatre'
                TwoLineListItem:
                    text: 'M.F.Tech.(Cinematography)'
                    secondary_text: 'Master of Film Technology(Cinematography)'
                TwoLineListItem:
                    text: 'M.F.Tech.(Direction & Screenplay Writing)'
                    secondary_text: 'Master of Film Technology(Direction & Screenplay Writing)'
                TwoLineListItem:
                    text: 'Ph.D.(Dramatics)'
                    secondary_text: 'Doctor of Philosophy in Dramatics'
                TwoLineListItem:
                    text: 'Ph.D.(Indian Theatre)'
                    secondary_text: 'Doctor of Philosophy in Indian Theatre'