MDScreen:
    name: 'science_pcm'
    MDFloatLayout:
        MDToolbar:
            title: 'Science(PCM)'
            elevation: 10
            pos_hint : {"center_x":0.5, "center_y": 0.93}
            MDIconButton:
                icon: 'logout'
                pos_hint : {"center_x":0.9, "center_y": 0.5}
                on_press: root.manager.current = 'after_10'
        MDLabel:
            text: "If you love Physics, Chemistry and Maths, then there is high percentage of probablity that you achieve success in the following fields:"
            font_size: "20sp"
            pos_hint: {"center_x": .5, "center_y": .75}
            halign: 'center'
            color: rgba(255, 153, 51, 255)
        ScrollView:
            pos_hint : {"center_x":0.5, "center_y": 0.15}
            MDList:
                OneLineListItem:
                    text: 'Engineering Diplomas'
                    on_press: root.manager.current = 'diploma'
                TwoLineListItem:
                    text: 'Engineering'
                    secondary_text:'Detailed explained in after 12 section'
