MDScreen:
    name: 'it'
    MDFloatLayout:
        MDToolbar:
            title: 'Information Technology'
            elevation: 10
            pos_hint : {"center_x":0.5, "center_y": 0.93}
            MDIconButton:
                icon: 'logout'
                pos_hint : {"center_x":0.9, "center_y": 0.5}
                on_press: root.manager.current = 'eng'
        Button:
            text: "Interested in Masters ?"
            font_size: "20sp"
            size_hint: .75, .07
            pos_hint: {"center_x": 0.5, "center_y": 0.81}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: (0/255, 204/255, 153/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
        Image:
            source: "masters.png"
            pos_hint:{"x":-0.05, "y": 0.1}
        Button:
            text: "Yes"
            font_size: "20sp"
            size_hint: .3, .06
            pos_hint: {"center_x": 0.3, "center_y": 0.4}
            on_press: root.manager.current = 'yes'
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: (0/255, 204/255, 153/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
        Button:
            text: "No"
            font_size: "20sp"
            size_hint: .3, .06
            pos_hint: {"center_x": 0.7, "center_y": 0.4}
            on_press: root.manager.current = 'it_jobs'
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: (255/255, 51/255, 0/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
        MDLabel:
            text: "( If you select NO, you will be directed to JOB opportunity section )"
            font_size: "20sp"
            pos_hint: {"center_x": .5, "center_y": .2}
            halign: 'center'
            color: rgba(255, 102, 102, 255)