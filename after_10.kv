MDScreen:
    name: 'after_10'
    MDFloatLayout:
        MDToolbar:
            title: 'Class 10'
            elevation: 10
            pos_hint : {"center_x":0.5, "center_y": 0.93}
            MDIconButton:
                icon: 'logout'
                pos_hint : {"center_x":0.9, "center_y": 0.5}
                on_press: root.manager.current = 'explore'
        MDLabel:
            text: "Choose your favourite stream..."
            font_size: "23sp"
            pos_hint: {"center_x": .5, "center_y": .82}
            halign: 'center'
            color: rgba(255, 153, 51, 255)
        MDLabel:
            text: "Note:-Choosing your favourite subject will help you to learn more enthusiastically and can build a career of your choice. "
            font_size: "20sp"
            pos_hint: {"center_x": .5, "center_y": .7}
            halign: 'center'
            color: rgba(34, 34, 34, 255)
        Button:
            text: "Science(PCM)"
            font_size: "20sp"
            size_hint: .4, .05
            pos_hint: {"center_x": 0.25, "center_y": 0.55}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.current = "science_pcm"
            canvas.before:
                Color:
                    rgb: (255/255, 102/255, 102/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
