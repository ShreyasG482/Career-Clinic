MDScreen:
    name: 'forgot'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "careerclinic.png"
            pos_hint:{"y": 0.25}

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint:{'center_x': 0.5, 'center_y': 0.4}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: phone
                hint_text: "Enter Registered Phone Number"
                size_hint: 1, None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0, 0, 0, 0
                padding: 15
                font_size: "18sp"
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint:{'center_x': 0.5, 'center_y': 0.275}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: password
                hint_text: "Enter New Password"
                password: True
                size_hint: 1, None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0, 0, 0, 0
                padding: 15

                font_size: "18sp"
        Button:
            text: "CONFIRM"
            font_size: "18sp"
            size_hint: .35, .08
            pos_hint: {"center_x": 0.27, "center_y": 0.1}
            background_color: 0, 0, 0, 0
            on_release: app.send_data(fname, lname, dob, email, phone, username, password)
            canvas.before:
                Color:
                    rgb: (255/255, 153/255, 51/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [18]
        Button:
            text: "BACK"
            font_size: "18sp"
            size_hint: .35, .08
            pos_hint: {"center_x": 0.73, "center_y": 0.1}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: (255/255, 153/255, 51/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [18]
