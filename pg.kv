MDScreen:
    name: 'pg'
    MDFloatLayout:
        MDToolbar:
            title: 'Postgraduate Courses(UG)'
            elevation: 10
            pos_hint : {"center_x":0.5, "center_y": 0.93}
            MDIconButton:
                icon: 'logout'
                pos_hint : {"center_x":0.9, "center_y": 0.5}
                on_press: root.manager.current = 'explore'
        Button:
            text: "Choose your stream :"
            font_size: "20sp"
            size_hint: .75, .07
            pos_hint: {"center_x": 0.5, "center_y": 0.81}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.current = "science_pcm"
            canvas.before:
                Color:
                    rgb: (255/255, 80/255, 80/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
        Image:
            source: "ug.png"
            pos_hint:{"x":0.3, "y": 0.0}
        Button:
            text: "Engineering"
