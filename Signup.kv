MDScreen:
    name: 'signup'
    MDTextField:
        id: fname
        hint_text: "First Name"
        helper_text_mode: "on_focus"
        icon_right: "rename-box"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.9}
        size_hint_x:None
        width:250
    MDTextField:
        id: lname
        hint_text: "Last Name"
        helper_text_mode: "on_focus"
        icon_right: "rename-box"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.8}
        size_hint_x:None
        width:250
    MDTextField:
        id: dob
        hint_text: "DOB (YYYY-MM-DD)"
        helper_text_mode: "on_focus"
        icon_right: "calendar-text-outline"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.7}
        size_hint_x:None
        width:250
    MDTextField:
        id: email
        hint_text: "Enter Email"
        helper_text_mode: "on_focus"
        icon_right: "email"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.6}
        size_hint_x:None
        width:250
    MDTextField:
        id: phone
        hint_text: "Enter Phone Number"
        helper_text_mode: "on_focus"
        icon_right: "cellphone"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        size_hint_x:None
        width:250
    MDTextField:
        id: username
        hint_text: "Enter Username"
        helper_text_mode: "on_focus"
        icon_right: "warehouse"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.4}
        size_hint_x:None
        width:250
    MDTextField:
        id: password
        hint_text: "Enter Password"
        helper_text_mode: "on_focus"
        icon_right: "onepassword"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'center_x': 0.5, 'center_y': 0.3}
        size_hint_x:None
        width:250
    Button:
        text: "SUBMIT"
        font_size: "18sp"
        size_hint: .35, .08
        pos_hint: {"center_x": 0.27, "center_y": 0.1}
        background_color: 0, 0, 0, 0
        on_release: app.send_data(fname, lname, dob, email, phone, username, password)
        canvas.before:
            Color:
                rgb: (255/255, 153/255, 51/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]
    Button:
        text: "BACK"
        font_size: "18sp"
        size_hint: .35, .08
        pos_hint: {"center_x": 0.73, "center_y": 0.1}
        background_color: 0, 0, 0, 0
        on_release:
            root.manager.current = "login"
        canvas.before:
            Color:
                rgb: (255/255, 153/255, 51/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [18]
